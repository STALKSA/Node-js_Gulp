block content 
  - let colors = ['Red', 'Orange', 'Yellow', 'Green', 'Blue', 'Indigo', 'Violet'];

  ul
    each color, index in colors
      li(style=`color: hsl(${index * 300 / 6}deg, 100%, 50%)`) #{color}

